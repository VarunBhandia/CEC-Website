<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa">
  <h:head>
    <h:title>GInfo</h:title>
    <model>
      <instance>
        <data id="build_GInfo_1533409704">
          <meta>
            <instanceID/>
          </meta>
          <name/>
          <emailID/>
          <dob/>
        </data>
      </instance>
      <itext>
        <translation lang="English">
          <text id="/data/name:label">
            <value style="color:red">ENTER YOUR NAME</value></span>
          </text>
          <text id="/data/emailID:label">
            <value>ENTER YOUR VALID EMAIL ID</value>
          </text>
          <text id="/data/dob:label">
            <value>ENTER YOUR DOB</value>
          </text>
        </translation>
      </itext>
      <bind nodeset="/data/meta/instanceID" type="string" readonly="true()" calculate="concat('uuid:', uuid())"/>
      <bind nodeset="/data/name" type="string"/>
      <bind nodeset="/data/emailID" type="string"/>
      <bind nodeset="/data/dob" type="date"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/data/name">
      <label ref="jr:itext('/data/name:label')"/>
    </input>
    <input ref="/data/emailID">
      <label ref="jr:itext('/data/emailID:label')"/>
    </input>
    <input ref="/data/dob">
      <label ref="jr:itext('/data/dob:label')"/>
    </input>
  </h:body>
</h:html>